{
	"tasks": [
		{
			"label": "build",
			"group": "build",
			"type": "shell",
			"command": "scons",
			"args": [
				// enable for debugging with breakpoints
				"dev_build=yes",
				"compiledb=yes",
				"template_debug=yes"
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "build-release",
			"group": "build",
			"type": "shell",
			"command": "scons",
			"args": [
				"compiledb=yes",
			],
			"problemMatcher": "$msCompile"
		}
	],
	"version": "2.0.0"
}